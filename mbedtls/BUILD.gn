      "repo/library/x509.c",
      "repo/library/x509_create.c",
      "repo/library/x509_crl.c",
      "repo/library/x509_csr.c",
      "repo/library/x509write_crt.c",
      "repo/library/x509write_csr.c",
      "repo/library/xtea.c",
      "optiga-trust-m/examples/mbedtls_port/trustm_ecdsa.c",
      "optiga-trust-m/examples/mbedtls_port/trustm_ecdh.c",
      "optiga-trust-m/examples/mbedtls_port/trustm_init.c",
      "optiga-trust-m/examples/mbedtls_port/trustm_random.c",

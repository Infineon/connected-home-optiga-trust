      "repo/library/platform_util.c",
      "repo/library/poly1305.c",
      "repo/library/ripemd160.c",
      "repo/library/rsa.c",
      "repo/library/rsa_internal.c",
      "repo/library/sha1.c",
      "repo/library/sha256.c",
      "repo/library/sha512.c",
